<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/MaterialDarkerBackground"
    >


    <TextView
        android:id="@+id/NameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mainLayoutMargin"
        android:layout_marginBottom="5px"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="@dimen/mainLayoutMargin"
        android:layout_marginRight="@dimen/mainLayoutMargin"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5px"
        android:background="@color/MaterialDarkerGreen"
        android:padding="@dimen/textViewPaddingTopBottom"
        android:paddingBottom="@dimen/textViewPaddingTopBottom"
        android:paddingEnd="@dimen/textViewPaddingLeftRight"
        android:paddingLeft="@dimen/textViewPaddingLeftRight"
        android:paddingRight="@dimen/textViewPaddingLeftRight"
        android:paddingStart="@dimen/textViewPaddingLeftRight"
        android:paddingTop="@dimen/textViewPaddingTopBottom"
        android:textColor="@color/MaterialBackground" />

    <TextView
        android:id="@+id/RibbonVIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mainLayoutMargin"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/textViewPaddingTopBottom"
        android:paddingBottom="@dimen/textViewPaddingTopBottom"
        android:paddingEnd="@dimen/textViewPaddingLeftRight"
        android:paddingLeft="@dimen/textViewPaddingLeftRight"
        android:paddingRight="@dimen/textViewPaddingLeftRight"
        android:paddingStart="@dimen/textViewPaddingLeftRight"
        android:paddingTop="@dimen/textViewPaddingTopBottom"
        android:background="@color/MaterialPurple"
        android:textColor="@color/MaterialBackground"
        android:text="" />

    <TextView
        android:id="@+id/MeaningView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mainLayoutMargin"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="@dimen/textViewPaddingTopBottom"
        android:paddingBottom="@dimen/textViewPaddingTopBottom"
        android:paddingEnd="@dimen/textViewPaddingLeftRight"
        android:paddingLeft="@dimen/textViewPaddingLeftRight"
        android:paddingRight="@dimen/textViewPaddingLeftRight"
        android:paddingStart="@dimen/textViewPaddingLeftRight"
        android:paddingTop="@dimen/textViewPaddingTopBottom"
        android:background="@color/MaterialBlue"
        android:textColor="@color/MaterialBackground"
        android:minHeight="12dp"

        android:text="" />

    <TextView
        android:id="@+id/ExampleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mainLayoutMargin"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/textViewPaddingTopBottom"
        android:paddingBottom="@dimen/textViewPaddingTopBottom"
        android:paddingEnd="@dimen/textViewPaddingLeftRight"
        android:paddingLeft="@dimen/textViewPaddingLeftRight"
        android:paddingRight="@dimen/textViewPaddingLeftRight"
        android:paddingStart="@dimen/textViewPaddingLeftRight"
        android:paddingTop="@dimen/textViewPaddingTopBottom"
        android:background="@color/MaterialYellow"
        android:textColor="@color/MaterialBackground"
        android:text="" />

</LinearLayout>