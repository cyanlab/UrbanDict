<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/MaterialDarkerBackground"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/NameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mainLayoutMargin"
            android:layout_marginBottom="5px"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="@dimen/mainLayoutMargin"
            android:layout_marginRight="@dimen/mainLayoutMargin"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5px"
            android:layout_weight="2"
            android:background="@drawable/item_roundcorner"
            android:padding="@dimen/textViewPaddingTopBottom"
            android:paddingBottom="@dimen/textViewPaddingTopBottom"
            android:paddingEnd="@dimen/textViewPaddingLeftRight"
            android:paddingLeft="@dimen/textViewPaddingLeftRight"
            android:paddingRight="@dimen/textViewPaddingLeftRight"
            android:paddingStart="@dimen/textViewPaddingLeftRight"
            android:paddingTop="@dimen/textViewPaddingTopBottom"
            android:textAlignment="center"
            android:textColor="@color/MaterialDarkerGreen" />

        <TextView
            android:id="@+id/RibbonVIew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mainLayoutMargin"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="8"
            android:background="@drawable/item_roundcorner"
            android:padding="@dimen/textViewPaddingTopBottom"
            android:paddingBottom="@dimen/textViewPaddingTopBottom"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingTop="@dimen/textViewPaddingTopBottom"
            android:textAlignment="center"
            android:textColor="@color/MaterialPurple" />
    </LinearLayout>

    <TextView
        android:id="@+id/MeaningView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mainLayoutMargin"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/item_roundcorner"
        android:minHeight="12dp"
        android:padding="@dimen/textViewPaddingTopBottom"
        android:paddingBottom="@dimen/textViewPaddingTopBottom"
        android:paddingEnd="@dimen/textViewPaddingLeftRight"
        android:paddingLeft="@dimen/textViewPaddingLeftRight"
        android:paddingRight="@dimen/textViewPaddingLeftRight"
        android:paddingStart="@dimen/textViewPaddingLeftRight"
        android:paddingTop="@dimen/textViewPaddingTopBottom"
        android:text=""

        android:textColor="@color/MaterialBlue" />

    <TextView
        android:id="@+id/ExampleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mainLayoutMargin"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/textViewPaddingTopBottom"
        android:paddingBottom="@dimen/textViewPaddingTopBottom"
        android:paddingEnd="@dimen/textViewPaddingLeftRight"
        android:paddingLeft="@dimen/textViewPaddingLeftRight"
        android:paddingRight="@dimen/textViewPaddingLeftRight"
        android:paddingStart="@dimen/textViewPaddingLeftRight"
        android:paddingTop="@dimen/textViewPaddingTopBottom"
        android:background="@drawable/item_roundcorner"
        android:textColor="@color/MaterialYellow"
        android:text="" />

</LinearLayout>